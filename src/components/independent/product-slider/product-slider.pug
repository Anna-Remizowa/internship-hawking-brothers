mixin product_slider(product, addClass)
  .product-slider(class= addClass)
    .product-slider__wrapper
      .product-slider__img-box
        a.product-slider__img-link(href= product.href)
          img.product-slider__img(src= product.src)
        .icon-line.icon-line--one.product-slider__icon-line
          button.icon-line__button.icon-line__button--dark
            .icon.icon-line__button-img.icon-line__button-img--shopping.icon-line__button-img--light
      .product-slider__content-box
        a.product-slider__content-title(href= product.href)= product.name
        a.product-slider__content-description(href= product.href)= product.description
        .price-container.product-slider__content-price
          p.price-container__price-new.product-slider__price-new= product.costNew
          p.price-container__price-old.product-slider__price-old= product.costOld
