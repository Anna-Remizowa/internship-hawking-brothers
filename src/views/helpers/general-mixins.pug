mixin social_media(socialList, socialColorClass)
  nav.social-media-menu
    ul.social-media-menu__list
      each item in socialList
        li.social-media-menu__item
          a.social-media-menu__link(href= item.href)
            svg(class="social-media-menu__img " + socialColorClass + " social-media-menu__img--" + item.name)
              use(xlink:href= item.src)

mixin background_image(imageClass)
  .background-img
    img(class="background-img__background-circle " + imageClass)

mixin arrows(id)
  .arrows-container(id= id)
    button.arrows-container__arrow
      svg.arrows-container__arrow-img.arrows-container__arrow-img--left
        use(xlink:href= images.arrow)
    button.arrows-container__arrow
      svg.arrows-container__arrow-img.arrows-container__arrow-img--right
        use(xlink:href= images.arrow)

mixin product_slider(product)
  .bestsellers__slide-container
    .bestsellers__img-box
      img.bestsellers__img(src= product.src)
      .icon-line.icon-line--one.bestsellers__icon-line
        button.icon-line__button.icon-line__button--dark
            svg.icon.icon-line__button-img.icon-line__button-img--light
              use(xlink:href= images.cart)
    .bestsellers__content-box
      p.bestsellers__content-title= product.name
      p.bestsellers__content-description= product.description
      .price-container.bestsellers__content-price
        p.price-container__price-new.bestsellers__price-new= product.costNew
        p.price-container__price-old.bestsellers__price-old= product.costOld

mixin footer_link(footerLinks)
  li.footer__ul-item
    a.footer__ul-link(href= footerLinks.href)= footerLinks.name
